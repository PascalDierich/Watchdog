<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_observable_big"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    android:elevation="48dp"
    app:cardBackgroundColor="@color/color_Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/layoutObservable_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/contentDescription_ObservableThumbnail"
                android:src="@drawable/thumbnail_observable_default"/>

            <TextView
                android:id="@+id/layoutObservable_displayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                />


        </LinearLayout>

        <!--
            TODO: This ImageView gets replaced by RecyclerView with ImageViews to
                  add new Icons automatically.
                  All saved SupportedNetworks set for this Observable are going to
                  get showed in this row.

                  As long as there's only one network, Fuck it...
        -->

        <ImageView
            android:id="@+id/layoutObservable_iconPreview_youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/contentDescription_iconYouTube"
            android:src="@drawable/icon_youtube_small"/>

    </LinearLayout>


</android.support.v7.widget.CardView>